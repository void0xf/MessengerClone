<UserControl x:Class="MessengerClone.Views.SignUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MessengerClone.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF2C2C2C">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Create an account" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30"/>
            <Border Background="#FF333333" CornerRadius="5" Margin="0,0,0,15">
                <TextBox Foreground="White" 
                             BorderBrush="{x:Null}" 
                             Background="Transparent"
                             Text="{Binding Username}"/>
            </Border>
            <Border Background="#FF333333" CornerRadius="5" Margin="0,0,0,15">
                <TextBox Foreground="White" 
                         BorderBrush="{x:Null}" 
                         Background="Transparent"
                         Text="{Binding Email}"/>
            </Border>
            <Border Background="#FF333333" CornerRadius="5" Margin="0,0,0,15">
                <TextBox Foreground="White" 
                             BorderBrush="{x:Null}" 
                             Background="Transparent"
                             Text="{Binding Password}"/>
            </Border>
            <Border Background="#FF333333" CornerRadius="5" Margin="0,0,0,15">
                <TextBox Foreground="White" 
                             BorderBrush="{x:Null}" 
                             Background="Transparent"
                             Text="{Binding ConfirmPassword}"/>
            </Border>
            <Button Content="Register" 
                    Background="#FF004A7C" 
                    Foreground="White" 
                    BorderBrush="{x:Null}"
                    Margin="0,0,0,15"
                    Command="{Binding RegisterCommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <TextBlock Text="Already have an account? Log in" 
                       Foreground="#FF6A6A6A" 
                       HorizontalAlignment="Center"
                       Cursor="Hand"/>
            <Separator Background="#FF333333" 
                       Margin="0,30,0,30"/>
        </StackPanel>
    </Grid>
</UserControl>
